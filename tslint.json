{
  "defaultSeverity": "none",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "no-consecutive-blank-lines": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-var-requires": false,
    "no-shadowed-variable": false,
    "only-arrow-functions": false,
    "prefer-for-of": false,
    "no-trailing-whitespace": false,
    "semi": [
      true,
      "always"
    ],
    "quotemark": [
      false,
      "single"
    ],
    "no-console": false,
    "comma-style": [
      false,
      "last"
    ],
    "comma-dangle": [
      false,
      "never"
    ],
    "semicolon": [
      false
    ],
    "trailing-comma": [
      false
    ],
    "whitespace": false
  }
}